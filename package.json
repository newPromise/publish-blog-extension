{
  "name": "publish-blog-extension",
  "displayName": "发布博客",
  "description": "一键将 Markdown 文件发布到博客仓库",
  "version": "1.0.0",
  "publisher": "user",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/publish-blog-extension"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:publish-blog.publish",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "bin": {
    "build-vsix": "./scripts/build-vsix.js"
  },
  "contributes": {
    "commands": [
      {
        "command": "publish-blog.publish",
        "title": "发布到博客"
      },
      {
        "command": "publish-blog.fileExplorerClick",
        "title": "点击文件"
      },
      {
        "command": "publish-blog.refreshExplorer",
        "title": "刷新列表",
        "icon": "$(refresh)"
      },
      {
        "command": "publish-blog.publishWithIcon",
        "title": "发布到博客",
        "icon": "$(cloud-upload)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "markdown-explorer",
          "title": "Markdown文件",
          "icon": "$(markdown)"
        }
      ]
    },
    "views": {
      "markdown-explorer": [
        {
          "id": "markdownExplorer",
          "name": "Markdown文件",
          "icon": "$(markdown)",
          "contextualTitle": "Markdown文件"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "markdownExplorer",
        "contents": "没有找到Markdown文件。\n[刷新](command:publish-blog.refreshExplorer)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "publish-blog.refreshExplorer",
          "when": "view == markdownExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "publish-blog.publish",
          "when": "viewItem == markdown",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "publish-blog.publish",
          "group": "2_workspace"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "publish-blog.publish",
          "group": "2_workspace"
        }
      ],
      "explorer/item/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "publish-blog.publishWithIcon",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "发布博客",
      "properties": {
        "publishBlog.blogRepoPath": {
          "type": "string",
          "default": "",
          "description": "博客仓库路径"
        },
        "publishBlog.blogDirPath": {
          "type": "string",
          "default": "",
          "description": "博客仓库内的子目录"
        },
        "publishBlog.deepseekApiKey": {
          "type": "string",
          "default": "",
          "description": "DeepSeek API密钥",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src --ext ts",
    "buildvsix": "npm run package && node scripts/build-vsix.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^7.1.3",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "archiver": "^7.0.1",
    "eslint": "^8.13.0",
    "glob": "^8.0.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.7.2",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "fs-extra": "^10.0.0"
  }
}
